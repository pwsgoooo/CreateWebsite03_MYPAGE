<%-include('header.ejs')%>
<div
  id="container"
  style="margin-top: 5em; padding-top: 5em; display: grid; place-items: center"
>
  <form action="/contactProc" method="post">
    <ul style="list-style: none">
      <li style="margin-bottom: 6%">
        이&nbsp;&nbsp;&nbsp;름 :
        <input
          type="text"
          name="name"
          required
          size="40"
          style="height: 1.5em"
        />
      </li>
      <li style="margin-bottom: 6%">
        연락처 :
        <input
          type="text"
          name="phone"
          required
          size="40"
          style="height: 1.5em"
        />
      </li>
      <li style="margin-bottom: 6%">
        이메일 :
        <input
          type="text"
          name="email"
          required
          size="40"
          style="height: 1.5em"
        />
      </li>
      <li style="margin-bottom: 6%">
        내용 <br />
        <textarea name="memo" id="" cols="51" style="height: 4.5em"></textarea>
      </li>
      <button
        style="
          width: 100%;
          height: 3em;
          line-height: 3em;
          border-color: #d81159;
          background-color: #ffbc42;
          font-weight: bold;
          color: white;
        "
      >
        문의하기
      </button>
    </ul>
  </form>
</div>
<%-include('footer.ejs')%>
